	"item": [
		{
			"name": "1. Create wallet — success",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 201\", function () {",
							"   pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Response has walletId and amount=0\", function () {",
							"   const json = pm.response.json();",
							"   pm.expect(json.walletId).to.exist;",
							"   pm.expect(json.amount).to.eql(0);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/wallet/create",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"wallet",
						"create"
					]
				}
			},
			"response": []
		},
